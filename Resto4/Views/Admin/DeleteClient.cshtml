@model Microsoft.AspNetCore.Identity.IdentityUser

@using Microsoft.AspNetCore.Identity

@{
    ViewBag.Title = "DeleteClient";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
<h3>Are you sure you want to delete this user?</h3>
<div>
    <h4>Client</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            User ID
        </dt>
        <dd>
            @Model.Id
        </dd>

        <dt>
            User Username
        </dt>
        <dd>
            @Model.UserName
        </dd>

        <dt>
            User Email
        </dt>
        <dd>
            @{
                var userEmail = Model.Email;
                if (userEmail != null)
                {
                    @userEmail
                }
                else
                {
                    <text>No email available</text>
                }
            }
        </dd>
    </dl>

    @using (Html.BeginForm("DeleteClientConfirmed", "Admin", new { id = Model.Id }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
                @Html.ActionLink("Back to List", "clients", null, new { @class = "btn btn-default btn-danger" })
        </div>
    }
</div>
</div>